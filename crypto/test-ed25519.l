(load "ed25519.l")
(use (Keys SK PK M S Sig)
   (in "vectors/sign.input"
      (until (eof)
         (setq Keys (hexL (till ":")))
         (setq SK (head 32 Keys))
         (setq PK (publickey SK))
         (test PK (tail 32 Keys))
         (do 2
            (from ":") )
         (setq M (hexL (till ":")))
         (setq S (signature M SK PK))
         (from ":")
         (setq Sig (head 64 (hexL (till ":"))))
         (test Sig S)
         (test T (checkvalid S M PK))
         (line) ) ) )
(msg 'ed25519-OK)
